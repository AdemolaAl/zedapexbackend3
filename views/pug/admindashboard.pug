doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel='stylesheet', href='/public/dashboard.css')
        script(src='https://kit.fontawesome.com/0b68ed503d.js', crossorigin='anonymous')
        link(rel='preconnect', href='https://fonts.googleapis.com')
        link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin='')
        link(href='https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap', rel='stylesheet')
        
            
    body 
        .left 
            .name ZedapexAcademy
            .divs
                a(href="/admindashboard/mydashboard") 
                    .div#mydashboard(onclick='')
                        <i class="fa-regular fa-user"></i> 
                        p My Dashboard
                a(href="/admindashboard/classes") 
                    .div#classes(onclick='handlecourses(this)')
                        <i class="fa-regular fa-user"></i> 
                        p Send Classes
                a(href="/admindashboard/coupon") 
                    .div#coupon(onclick='handlecourses(this)')
                        <i class="fa-regular fa-user"></i> 
                        p coupon         
                a(href="/admindashboard/profile") 
                    .div(onclick='handleprofile(this)')
                        <i class="fa-regular fa-user"></i> 
                        p Profile
                a(href="/admindashboard/billing") 
                    .div(onclick='handlebilling(this)') 
                        <i class="fa-solid fa-money-bill"></i>
                        p Billing
                a(href="/dashboard/order") 
                    .div(onclick='handleorder(this)') 
                        <i class="fa-solid fa-clock-rotate-left"></i>
                        p Order History
            
        .right 
            .header3
                .flex
                    <i class="fa-solid fa-bars"></i>
                    .search-container
                        input(type='text', placeholder='Search Entire Dashboard')
                        i.fas.fa-search
                .flex 
                    
                    div(style="display:flex; align-items:center;")
                    <i class="fa-regular fa-user"></i>
            #content 
                != content
                


